<h1>Welcome to the Rock, Paper, Scissors game</h1>

  <form action="/game">
    <div class="form-group">
       <h5>Player1: Pick rock, paper or scissors</h5>
       <select id="player1" name="player1">
          <option value="rock">Rock</option>
          <option value="paper">Paper</option>
          <option value="scissors">Scissors</option>
        </select>
    </div>
    <div class="form-group">
      <h5>Player2: Pick rock, paper or scissors</h5>
      <select id="player2" name="player2">
         <option value="rock">Rock</option>
         <option value="paper">Paper</option>
         <option value="scissors">Scissors</option>
       </select>
   </div>
    <button type="submit" class="btn">Go!</button>
  </form>

  <div class="winner">
    <h4>Who is the winner?</h4>
      <h5> <%= @result %></h5>
  </div>
